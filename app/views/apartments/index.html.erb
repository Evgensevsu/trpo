<div class="container1">
<h1>Список апартаментов</h1>

<table>
  <thead>
    <tr>
      <th>Заголовок</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Координаты</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.title %></td>
        <td><%= apartment.description %></td>
        <td><%= apartment.price %></td>
        <td><%= apartment.location %></td>
      </tr>
        <td><%= link_to 'Посмотреть', apartment %></td>
        <td><%= link_to 'Отредактировать', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Удалить', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

</br>
<p><%= link_to 'Новый Апартамент', new_apartment_path,style: "text-align: center; display: block; margin-top: 10px; color: #333;" %></p>
<%= link_to "Выход", destroy_user_session_path, 'data-turbo-method': :delete, class: "sign-out", style: "text-align: center; display: block; margin-top: 10px; color: red;" %>
  <%= link_to "Назад", :back, style: "text-align: center; display: block; margin-top: 10px; color: #333;" %> 
</div>